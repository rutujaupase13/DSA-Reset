class Solution {
    public boolean isPowerOfThree(int n) {
        if(n <= 0)return false;
        if(n == 1)return true;
        // solution 1
        // while(n % 3 == 0){
        //     n = n/3;
        //     if(n == 1) return true;
        // }
        // return false;

        // solution 2
        int num = n;
        int count = 0,sum=1;
        while(num > 1){
            num = num/3;
            count++;
        }
        for(int i = 1; i <= count ;i++){
            sum = sum * 3;
        }

        if(sum == n)return true;

        return false;
    }
}
